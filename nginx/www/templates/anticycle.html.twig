{% extends '/base.html.twig' %}

{% block title %}
    {{ parent() }} / Categories
{% endblock %}
{% block contents %}
    <div class="row justify-content-start">
        <div class="col">
            <h2>
                Anticycle Strategy
                {% if days_from_last > 0 %}
                    <a href="/anticycle/sync">
                        <button type="button" class="btn btn-primary">
                            Sync <span class="badge bg-secondary">{{ days_from_last }} days</span>
                        </button>
                    </a>
                {% endif %}
            </h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item active" aria-current="true">Instruments</li>
                <li class="list-group-item">SPY (SP500)</li>
                <li class="list-group-item">VIOV (Small-Cap 600)</li>
                <li class="list-group-item">GLD (Gold)</li>
                <li class="list-group-item">IEF (7-10Y Treasury)</li>
                <li class="list-group-item">LQD (Corporate Bond)</li>
            </ul>
        </div>
    </div>




    <div class="row align-items-start">
        <div class="col">
            <div class="card card-body">
                <h5>Sp500 <span class="badge">{{ sp500.current }}</span></h5>
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>120 avg</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for average in sp500.averages %}
                        <tr>
                            <td>
                                {{ average.date|date('d.m.Y') }}
                            </td>
                            <td>
                            <span
                        {% if average.value > average.avg %}
                            class="text-success">
                        {% else %}
                            class="text-danger">
                                {% endif %}
                                {{ average.value }}
                        </span>
                            </td>
                            <td>
                                {{ average.avg }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col">
            <div class="card card-body">
                <h5>Gold ({{ gold.current }})</h5>
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>200 avg</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for average in gold.averages %}
                        <tr>
                            <td>
                                {{ average.date|date('d.m.Y') }}
                            </td>
                            <td>
                            <span
                        {% if average.value > average.avg %}
                            class="text-success">
                        {% else %}
                            class="text-danger">
                                {% endif %}
                                {{ average.value }}
                        </span>
                            </td>
                            <td>
                                {{ average.avg }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col">
            <div class="card card-body">
                <h5>T10Y2Y ({{ t10y2y.current }})</h5>
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>10Y avg</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for average in t10y2y.averages %}
                        <tr>
                            <td>
                                {{ average.date|date('d.m.Y') }}
                            </td>
                            <td>
                            <span
                        {% if (average.value - average.avg)|abs < 0.5 %}
                            class="text-warning">
                        {% elseif  average.value > average.avg %}
                            class="text-error">
                        {% else %}
                            class="text-success">
                                {% endif %}
                                {{ average.value }}
                        </span>
                            </td>
                            <td>
                                {{ average.avg }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col">
            <div class="card card-body">
                <h5>High yield spread ({{ high_yield.current }})</h5>
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>10Y avg</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for average in high_yield.averages %}
                        <tr>
                            <td>
                                {{ average.date|date('d.m.Y') }}
                            </td>
                            <td>
                            <span

                        {% if (average.value - average.avg)|abs < 1 %}
                            class="text-warning">
                        {% elseif average.value > average.avg %}
                            class="text-success">
                        {% else %}
                            class="text-danger">
                        {% endif %}
                            {{ average.value }}
                        </span>
                            </td>
                            <td>
                                {{ average.avg }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
